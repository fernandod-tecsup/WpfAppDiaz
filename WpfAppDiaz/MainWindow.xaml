<Window x:Class="WpfAppDiaz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDiaz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Listar" 
                    Click="Button_Click"  
                    Background="LightCoral"
                    Height="38" 
                    Width="200"
                    FontSize="24"/>
            <DataGrid x:Name="dgProfesores">
            </DataGrid>
            <Button Content="Click Aqui" 
                    Click="Button_Click_1" Background="LightGreen" Height="38" Width="200" FontSize="24"/>
            <DataGrid x:Name="dgCursos">
            </DataGrid>
            <TextBox Margin="10" x:Name="nombreIn"></TextBox>
            <TextBox Margin="10" x:Name="apellidoIn"></TextBox>
            <Button Content="Agregar" 
                    Background="LightYellow" Height="38" Width="200" FontSize="24"
                    Click="Button_Click_2" />

            <DataGrid x:Name="dgNombresIngresados"></DataGrid>
        </StackPanel>
    </Grid>
</Window>
