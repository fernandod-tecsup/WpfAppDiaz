<Window x:Class="WpfAppDiaz.Cursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDiaz"
        mc:Ignorable="d"
        Title="Cursos" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Label HorizontalAlignment="Center" Content="label1" x:Name="nombre" Grid.Column="0" Grid.Row="0" Width="100" Height="30"></Label>
        <TextBox Grid.Column="1" Grid.Row="0" Width="100" Height="30"></TextBox>
        <Label  Content="label2" Grid.Column="0" Grid.Row="1" Width="100" Height="30"></Label>
        <TextBox Grid.Column="1" Grid.Row="1" Width="100" Height="30"></TextBox>
